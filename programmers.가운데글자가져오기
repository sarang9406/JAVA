class Solution {
	public String solution(String s) {
		String answer = "";
		if (s.length()%2 == 0) {
			answer = Character.toString(s.charAt((s.length())/2-1));
			String newA = answer.concat(Character.toString(s.charAt((s.length())/2)));
			
			return newA;
			
		} else {
         answer = Character.toString(s.charAt((s.length())/2));
         
		}
        return answer;
    }
}
